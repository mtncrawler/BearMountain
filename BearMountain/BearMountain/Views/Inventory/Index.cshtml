@using Microsoft.AspNetCore.Identity
@using BearMountain.Models

@model IEnumerable<BearMountain.Models.Product>
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Products";
}

<head>
    <title>Bear Mountain</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    @*<link rel="stylesheet" type="text/css" href="~/StyleSheet.css" />*@
</head>

<header>
    <h2>Products</h2>
    <nav>
        <a asp-controller="Home">Home</a>
    </nav>
</header>

<div>

    @if (SignInManager.IsSignedIn(User))
    {
        <h2>Shopping Cart</h2>

        @await Component.InvokeAsync("ItemsInCart", @SignInManager.UserManager.GetUserName(User))
     }

</div>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img class="product" src="~/assets/@Html.DisplayFor(modelItem => item.Image)" />
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
